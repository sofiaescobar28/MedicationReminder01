<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFEADB"
    android:padding="15dp"
    tools:context=".medicina_por_recordatorio">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/med_reminder"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/datos_de_dosis"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/tvNomMEDxRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tvTipoMEDxRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tipo"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etDosificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="18sp"
        android:hint="example: 500mg"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/etDosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:hint="Dosis (numero de unidades)" />
    <TextView
        android:id="@+id/lblValidacionMEDxRE"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGuardar"
            android:onClick="GuardarMEDxRE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="#FF9A76"
            android:text="@string/guardar" />

        <Button
            android:id="@+id/btnCancelar"
            android:onClick="CancelarMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:background="#679B9B"
            android:text="@string/cancelar" />
    </LinearLayout>
</LinearLayout>